Vagrant.configure("2") do |config|
  config.vm.define "nat" do |nat|
    nat.vm.box = "debian/stretch64"
    nat.vm.network "private_network", ip: "172.16.0.1",
      virtualbox__intnet: true
    nat.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "provisioning/nat-with-dhcp.yml"
    end
  end

  config.vm.define "backend" do |backend|
    backend.vm.box = "debian/stretch64"
    backend.vm.network "private_network", ip: "172.16.0.2",
      virtualbox__intnet: true
    backend.vm.provision "ansible_local" do |ansible|
      ansible.playbook = "provisioning/tomcat.yml"
    end
  end
end
