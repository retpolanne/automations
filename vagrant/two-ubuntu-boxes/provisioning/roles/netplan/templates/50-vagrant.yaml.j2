---
network:
  version: 2
  renderer: networkd
  ethernets:
    {{ internal_iface }}:
    {% if internal_ip -%}
      addresses:
      - {{ internal_ip }}
    {% endif %}
      {% if not is_gateway -%}
      gateway4: {{ gateway_address }}
      nameservers:
        addresses:
        - 8.8.8.8
      {% endif %}
